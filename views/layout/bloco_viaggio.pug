.row.proximos-viajes

            each viaggio in viaggi
                .col-md-6.col-lg-4.mb-4 
                    .card 
                        img.card-img-top(src=`img/destinos_${viaggio.imagen}.jpg`)
                        .card-body 
                            h2=viaggio.titulo
                            p 
                                svg.icon.icon-tabler.icon-tabler-calendar-bolt(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' stroke-width='2' stroke='currentColor' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    path(d='M13.5 21h-7.5a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v5')
                                    path(d='M16 3v4')
                                    path(d='M8 3v4')
                                    path(d='M4 11h16')
                                    path(d='M19 16l-2 3h4l-2 3')
                                | #{viaggio.fecha_ida} - #{viaggio.fecha_vuelta}

                            p  

                                svg.icon.icon-tabler.icon-tabler-user(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' stroke-width='2' stroke='currentColor' fill='none' stroke-linecap='round' stroke-linejoin='round')
                                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                                    path(d='M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0')
                                    path(d='M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2')

                                | #{viaggio.disponibles} Posti Disponibili   


                            p= viaggio.descripcion.substr(0, 100) + '...' 

                            a(href=`viaggi/${viaggio.slug}` class="btn btn-success btn-block") Piu Informazione  